{% extends 'base.html.twig' %}

{% block body %}
    <h1>Account</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ account.id }}</td>
            </tr>
            <tr>
                <th>Username</th>
                <td>{{ account.username }}</td>
            </tr>
            <tr>
                <th>Cloudstaffemail</th>
                <td>{{ account.cloudstaffEmail }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ account.password }}</td>
            </tr>
            <tr>
                <th>Department</th>
                <td>{{ account.department }}</td>
            </tr>
            <tr>
                <th>Officelocation</th>
                <td>{{ account.officeLocation }}</td>
            </tr>
            <tr>
                <th>Dreamcardno</th>
                <td>{{ account.dreamcardNo }}</td>
            </tr>
            <tr>
                <th>Contactno</th>
                <td>{{ account.contactNo }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('account_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('account_edit', { 'id': account.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
