{% extends 'AuctionBundle::base.html.twig' %}

{% block body %}
    <h3>{{ item.name }}</h3>
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ item.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ item.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ item.description }}</td>
            </tr>
            <tr>
                <th>Itemno</th>
                <td>{{ item.itemNo }}</td>
            </tr>
            <tr>
                <th>Reward Points</th>
                <td>{{ item.rewardPoints }}</td>
            </tr>
            <tr>
                <th>Sold By</th>
                <td>{{ item.soldBy }}</td>
            </tr>
            <tr>
                <th>Location</th>
                <td>{{ item.location }}</td>
            </tr>
            <tr>
                <th>Condition</th>
                <td>{{ item.isUsed }}</td>
            </tr>
            <tr>
                <th>Createdat</th>
                <td>{% if item.createdAt %}{{ item.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Endedat</th>
                <td>{% if item.endedAt %}{{ item.endedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
        <ul>
            {%  for image in item.images %}
                <li>{{ image.name }}</li>
            {%  endfor %}
        </ul>

    </table>
    <div class="btn-group pull-left">
        {{ form_start(delete_form) }}
        <input type="submit" value="Delete" class="btn btn-danger">
        {{ form_end(delete_form) }}
    </div>
    <div class="btn-group pull-right">
        <a href="{{ path('item_edit', { 'id': item.id }) }}" class="btn btn-primary">Edit</a>
        <a href="{{ path('item_index') }}" class="btn btn-default">Back to the list</a>
    </div>

{% endblock %}
