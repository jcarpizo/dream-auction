{% extends 'AuctionBundle::base.html.twig' %}

{% block body %}
    <div class="panel panel-default">
        <div class="panel-heading clearfix">
            <h3 class="panel-title">Items</h3>
            <a href="{{ path('item_new') }}" class="btn btn-default pull-right">New Item</a>
        </div>
        <ul class="list-group ">
            {% for item in items %}
                <div class="list-group-item clearfix">
                    <div class="btn-group pull-right">
                        <a href="{{ path('item_edit', { 'id': item.id }) }}" class="btn btn-default">edit</a>
                        <a href="{{ path('item_show', { 'id': item.id }) }}" class="btn btn-default">show</a>
                    </div>
                    <h4 class="list-group-item-heading">{{ item.name }}</h4>
                    <p class="list-group-item-text"><strong>item no. :</strong> {{ item.itemNo }}</p>
                    <p class="list-group-item-text"><strong>description:</strong> {{ item.description }}</p>
                    <p class="list-group-item-text"><strong>minimum bid:</strong> {{ item.minimumBid }}</p>
                    <p class="list-group-item-text"><strong>ended datetime:</strong> {% if item.endedAt %}{{ item.endedAt|date('Y-m-d H:i:s') }}{% endif %}</p>
                </div>
            {% endfor %}
        </ul>
    </div>
{% endblock %}
